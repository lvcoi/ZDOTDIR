# Pre-defined aliases to allow for color output
alias ls='ls --color=auto'
alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# shellcheck disable=all
# Common aliases

alias l='ls -CF '
alias la='ls -A '
alias ll='ls -Ahn '
alias lr='ls -R '
alias llr='ls -lhR'
alias lra='ls -RA '
alias dps='docker ps'
alias x='exit'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias apt='sudo apt'
alias apt-get='sudo apt get'
alias nv='nvim'
alias dps='docker ps'
alias dr='docker run '
alias dcu='docker compose up'
alias zcon='nvim ${HOME}/.config/zsh/'
alias cdz='cd ${HOME}/.config/zsh'
alias android-studio="/usr/share/android-studio/bin/studio.sh"
alias psec='docker run --rm -ti --network host -v $PWD/work:/work parrotsec/security:latest zsh'
alias myip='curl ifconfig.me'
alias dist='cat /etc/*-release/'
alias reload='source ${ZDOTDIR}/.zshrc'
alias zc='nvim ${ZDOTDIR}/.zshrc'
alias simp='python -m http.server 8000'
alias zd='cd $ZDOTDIR'

# Global Aliases

alias -g LS='| less --mouse'
alias -g T='| tee '
alias -g TA='| tee -a '
alias -g TL='| tail '
alias -g H='| head '
alias -g A='| awk '
alias -g G='| grep '
alias -g S='| sed '
alias -g ZD='${ZDOTDIR}'
